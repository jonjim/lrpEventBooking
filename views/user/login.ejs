<% layout('layouts/boilerplate'); %>
    <div class="container justify-content-center align-middle mt-md-5">
        <div class="row">
            <div class="col-md-6 offset-md- col-xl-4 offset-xl-4">
                <div class="card shadow">
                    <!-- <img src="<%= config.siteLogo?.url %>" alt="" class="img-fluid card-img-top" /> -->
                    <div class="card-body">
                        <h5 class="card-title text-center">Login</h5>
                        <form action="/login" method="POST" novalidate class="validated-form">
                            <div class="form-floating mb-3">
                                <input focus type="text" class="form-control" id="email" name="username" required placeholder="E-mail Address" type="username" autocomplete="off">
                                <label for="email">E-mail Address</label>
                                <div class="invalid-feedback">
                                    Please enter a Username.
                                </div>
                            </div>
                            <div class="form-floating mb-3">
                                <input type="password" class="form-control" id="passwordField" name="password" required placeholder="Password" type="password" autocomplete="off">
                                <label for="passwordField">Password</label>
                                <div class="invalid-feedback">
                                    Please enter a Password.
                                </div>
                            </div>
                            <div class="d-grid d-inline-column gap-2">
                                <button class="btn btn-success btn-block">Login</button>
                                <a href="/auth/google" class="btn btn-outline-dark"><img height="25px" class="my-0 me-2" src="/img/web_light_sq_ctn@4x.png">Sign in with Google</a>
                                <a href="/auth/facebook" class="btn btn-primary"><i class="bi bi-facebook me-2"></i>Sign in with Facebook</a>
                                <hr>
                            </div>
                            <a href="/register" class="link-dark">Create An Account</a> | <a href="/resetpassword" class="link-dark">Forgot My Password</a>                                
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script>
        document.getElementById('email').focus();
    </script>