<div class="accordion-item">
    <h2 class="accordion-header" ">
        <button style="font-size:1.2rem !important; font-weight:500 !important;" class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#accordionJadeThrone" aria-expanded="false" aria-controls="accordionJadeThrone">
      <img height="60px" src="<%= eventSystems.find(a => a.systemRef == 'jadeThrone').img.url %>" alt="Jade Throne">
    </button>
    </h2>
    <div id="accordionJadeThrone" class="accordion-collapse collapse" data-bs-parent="#systemSettings">
        <div class="card-header bg-white mt-3">
            <h6>Character Information</h6>
        </div>
        <div class="card-body">
            <div class="row mb-3">
                <div class="col-6">
                    <label for="jtCharacterName">Character Name</label>
                    <input type="text" id="jtCharacterName" name="jadeThrone[character][characterName]" value="<%= currentUser.jadeThrone.character.characterName %>" class="form-control form-control-sm">
                    <div class="invalid-feedback">
                        <p>Please provide a character name</p>
                    </div>
                </div>
                <div class="col-6">
                    <label for="jtClan">Clan</label>
                    <select name="jadeThrone[character][clan]" id="jtClan" class="form-select form-select-sm">
                        <option disabled selected value="">Select A Clan</option>
                        <option value="hinotori">Hinotori</option>
                        <option value="kani">Kani</option>
                        <option value="ryu">Ryu</option>
                        <option value="sasori">Sasori</option>
                        <option value="shishi">Shishi</option>
                        <option value="tsuru">Tsuru</option>
                    </select>
                </div>
            </div>
        </div>
    </div>
</div>