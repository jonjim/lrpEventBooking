<div class="accordion-item">
    <h2 class="accordion-header" ">
        <button style="font-size:1.2rem !important; font-weight:500 !important;" class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#accordionEldritchDays" aria-expanded="false" aria-controls="accordionEldritchDays">
      <img style="max-width:250px;" src="<%= eventSystems.find(a => a.systemRef == 'eldritchDays').img.url %>" alt="Eldritch Days">
    </button>
    </h2>
    <div id="accordionEldritchDays" class="accordion-collapse collapse" data-bs-parent="#systemSettings">
        <div class="card-header bg-white mt-3">
            <h6>Character Information</h6>
        </div>
        <div class="card-body">
            <div class="col-6">
                <label for="edCharacterName">Character Name</label>
                <input type="text" id="edCharacterName" name="eldritchDays[character][characterName]" value="<%= currentUser.twistedTales.character.characterName %>" class="form-control form-control-sm">
                <div class="invalid-feedback">
                    <p>Please provide a character name</p>
                </div>
            </div>
        </div>
    </div>
</div>