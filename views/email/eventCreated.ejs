<% layout('layouts/email') %>
<h2 align="center" style="margin-bottom:5;"><b><%= event.name %> Created</b> </h2>
<p align="center" style="margin-top: 0;">
    <%= dateOutput(event.eventStart) %>
    <% if (dateOutput(event.eventStart) != dateOutput(event.eventEnd)) { %> to
    <%= dateOutput(event.eventEnd) %>
    <% } %>
</p>
<% if (event.registrationFee.value != event.registrationFee.totalPaid) { %>
<p align="center">To make your event live, a registration fee of <%= currencyOutput(event.registrationFee.value) %> is due to be paid.</p>
<% } %>
<p align="center"><a href="<%= rootUrl %>/events/<%= event._id %>">Use this link to advertise your event, once you're all set up</a></p>
<p align="center"><a href="<%= rootUrl %>/admin/events/<%= event._id %>/edit">Click here to edit your event</a></p>
<p align="center"><a href="<%= rootUrl %>/admin/events/<%= event._id %>/manage">Click here to manage your event</a></p>
<p align="center"><a href="<%= rootUrl %>/<%= event.eventHost.eventSystem.systemRef %>">Use this link to advertise your system on <%= config.siteName %></a></p>