<html>

<head>
    <meta http-equiv="Content - Type" content="text/html; charset=utf-8">
</head>

<body>
    <table width="100%" cellspacing="0" style="text-align: center;border:none;background-color: #ffffff;color:#000;font-family: Helvetica, Arial, sans-serif;line-height: 150%;">
        <tbody>
            <tr>
                <td align="center" valign="top">
                    <div>
                        <table cellspacing="0" cellpadding="0" style="border:none;">
                            <tbody>
                                <tr>
                                    <td width="600" style="border-bottom:10px solid #e3e3e3e3;">
                                        <table width="600" cellpadding="0" cellspacing="0">
                                            <tbody>
                                                <tr>
                                                    <td width="101" height="95" align="center"><img src="<%= rootUrl %>/img/lorienTrust.png" alt="Lorien Trust" width="101" height="95" border="0">

                                                    </td>
                                                    <td style="padding-left:20px;padding-top:30px;">
                                                        <h2>Lorien Trust Sanctioned Events</h2>
                                                    </td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </td>
                                </tr>
                                <tr>
                                    <td width="600" class="defaultText" style="font-size: 14px;color: #333333;line-height: 150%;font-family: Helvetica;background-color: #FFFFFF;padding: 10px 0;"> <br />
                                        <h2 align="center" style="margin-bottom:5;"><b><%= booking.event.name %></b> </h2>
                                        <p align="center" style="margin-top: 0;">
                                            <%= new Date(booking.event.eventStart).toLocaleDateString() %>
                                                <% if (new Date(booking.event.eventStart).toLocaleDateString() != new Date(booking.event.eventEnd).toLocaleDateString()) { %> to
                                                    <%= new Date(booking.event.eventEnd).toLocaleDateString() %>
                                                        <% } %>
                                        </p>
                                        <p style="margin-bottom:0;">This is your receipt for
                                            <%= booking.event.name %>.</p>
                                        <p style="margin-bottom:0;">Thank you for booking the event! You have booked the following event tickets</p>
                                        <ul style="margin-top:0;">
                                            <% for (ticket of booking.eventTickets) { %>
                                                <li>
                                                    <%= ticket.description %>
                                                </li>
                                                <% } %>
                                        </ul>
                                        <p><a href="<%= rootUrl %>/events/<%= booking.event._id %>">View Info for <%= booking.event.name %></a></p>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <table width="600" cellpadding="0" cellspacing="0" style="margin-top:20px;">
                        <tbody>
                            <tr>
                                <td colspan="4" align="left" valign="top" style="padding-bottom:10px;border-bottom:10px solid #e3e3e3e3; border-top:10px solid #e3e3e3e3">
                                    <div style="font-size:11px"><br><a href="<%= rootUrl %>">Lorien Trust Sanctioned Events</a><br> </div>
                                </td>
                                <td></td>
                            </tr>
                        </tbody>
                    </table>
                </td>
            </tr>
        </tbody>
    </table>
</body>

</html>