<% layout('layouts/email') %>
<h2 align="center" style="margin-bottom:5;"><b><%= event.name %></b> </h2>
<p align="center" style="margin-top: 0;">
  <%= new Date(event.eventStart).toLocaleDateString() %>
  <% if (new Date(event.eventStart).toLocaleDateString() != new Date(event.eventEnd).toLocaleDateString()) { %> to
  <%= new Date(event.eventEnd).toLocaleDateString() %>
  <% } %>
</p>
<p style="margin-bottom:0;">This is your receipt for
  <%= event.name %>.</p>
<p style="margin-bottom:0;">The registration fee of <%= new Intl.NumberFormat('en-GB', { style: 'currency', currency: 'GBP' }).format(event.registrationFee.value) %> has been paid by <%= event.registrationFee.paypalPayer %></p>
<p><a href="<%= rootUrl %>/admin/events/<%= event._id %>/edit">Click here to edit <%= event.name %></a></p>
<p><a href="<%= rootUrl %>/admin/events/<%= event._id %>/manage">Click here to manage <%= event.name %></a></p>