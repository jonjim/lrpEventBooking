<% layout('layouts/boilerplate') %>

    <% if (!events) { %>
        <div class="mt-5 pt-5">
            <h3 class="text-center mt-5">There are currently no events available for booking</h3>
        </div>

        <% } else { %>
            <div class="row row-cols-1 row-cols-md-2 g-4">
                <% for (event of events) { %>
                    <div class="col">
                        <div class="card shadow h-100 py-3 px-3">
                            <div class="row h-100 g-0 pb-0">
                                <div class="col-4 col-md-4">
                                    <div class="img align-middle text-center ms-2"><img id="eventImg<%= event._id %>" <% if (event.img.url) {%> aria-label="event-logo"<% } %> class="rounded event-logo" src="<%= typeof event.img.url === 'undefined' ? event.eventHost.img.url : eventBooking.event.imgThumbnail %>" class="img-fluid rounded-start py-3 px-3" alt="...">
                                        <% if (event.img.url) { %><img style="top:-80px !important; left:0px !important;" id="hostImg<%= event._id %>" aria-label="host-logo" src="<%= event.eventHost.img.url %>" class="host-logo-fade" alt=""><% } %>
                                    </div>
                                </div>
                                <div class="col-8 col-md-8">
                                    <div class="card-body pb-0">
                                        <h4 class="card-title">
                                            <a class="link-dark" href="/events/<%= event._id %>">
                                                <%= event.name %>
                                            </a>
                                        </h4>
                                        <p class="card-text">
                                            <i>
                                <%= new Date(event.eventStart).toLocaleDateString() %> -
                                    <%= new Date(event.eventEnd).toLocaleDateString() %><br /><small>
                                            <%= event.location.split(',')[0] %>
                                        </small>
                            </i>
                                            <p class="card-text">
                                                <%- event.promoDescription %>
                                            </p>
                                    </div>
                                </div>
                            </div>
                            <div class="card-footer eventFooter mt-3">
                                <div class="row h-100">
                                    <div class="col"><a class="link-dark" target="_blank" href="<%= event.eventHost.eventSystem.website %>"><% if (event.eventHost.eventSystem.img?.url) { %><img class="system-logo" height="60px" src="<%= event.eventHost.eventSystem.img.url %>" alt="<%= event.eventHost.eventSystem.name %>"><% } else { %><%= event.eventHost.eventSystem.name %><% } %></a></div>
                                    <div class="col text-end mb-0 my-auto">
                                        <% if (event.eventHost.display) { %><small class="text-muted">Hosted by the <%= event.eventHost.name
                                    %></small>
                                            <% } %>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <% }  %>
            </div>
            <% } %>
            <script src="/js/eventLogo.js"></script>